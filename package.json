{
  "name": "ploinky-agent-lib",
  "version": "0.1.0",
  "description": "Agent library for orchestrating skill-based LLM interactions.",
  "license": "MIT",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "esbuild src/index.mjs --bundle --format=esm --outdir=dist/esm --platform=node --sourcemap --external:flexsearch",
    "build:cjs": "esbuild src/index.mjs --bundle --format=cjs --outdir=dist/cjs --platform=node --sourcemap --external:flexsearch"
  },
  "devDependencies": {
    "esbuild": "^0.21.4"
  }
}
